<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/iw_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="70dp" >
     <Button
        android:id="@+id/ReqButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Request a Ride "
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/image"
        />

       <Button
           android:id="@+id/profileButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/ReqButton"
           android:layout_alignBottom="@+id/ReqButton"
           android:layout_toRightOf="@+id/ReqButton"
           android:text=" View Profile " />
 
</RelativeLayout>
</LinearLayout>